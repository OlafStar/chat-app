{
  "id": null,
  "uid": "chat-infra",
  "title": "Chat App Infrastructure Overview",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "tags": ["chat-app", "infra"],
  "style": "dark",
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Host CPU usage (%)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "avg(rate(node_cpu_seconds_total{mode!=\"idle\"}[5m])) * 100"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "desc" }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Host memory used (%)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "desc" }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Host network throughput (bytes/s)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (instance) (rate(node_network_receive_bytes_total{device!~\"lo|veth.*\"}[5m]))",
          "legendFormat": "{{instance}} rx"
        },
        {
          "refId": "B",
          "expr": "sum by (instance) (rate(node_network_transmit_bytes_total{device!~\"lo|veth.*\"}[5m]))",
          "legendFormat": "{{instance}} tx"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Container CPU (cores)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 7 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{image!=\"\",name!~\".+/POD\"}[5m]))",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "cores" }, "overrides": [] },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Container memory (bytes)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 7 },
      "targets": [
        {
          "refId": "A",
          "expr": "max by (name) (container_memory_usage_bytes{image!=\"\",name!~\".+/POD\"})",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Container network (bytes/s)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 14 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (name) (rate(container_network_receive_bytes_total{image!=\"\",interface!~\"lo\"}[5m]))",
          "legendFormat": "{{name}} rx"
        },
        {
          "refId": "B",
          "expr": "sum by (name) (rate(container_network_transmit_bytes_total{image!=\"\",interface!~\"lo\"}[5m]))",
          "legendFormat": "{{name}} tx"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "HTTP error rate (%)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 6, "x": 12, "y": 14 },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (sum(rate(chat_app_http_requests_total{status=~\"5..\"}[5m])) / sum(rate(chat_app_http_requests_total[5m])))"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "desc" }
      }
    },
    {
      "id": 8,
      "type": "stat",
      "title": "Active websocket connections",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 6, "x": 18, "y": 14 },
      "targets": [
        {
          "refId": "A",
          "expr": "chat_app_ws_connections"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "none" }, "overrides": [] },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "value"
      }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "Websocket messages delivered/s",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 21 },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(chat_app_ws_messages_delivered_total[5m])"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "desc" }
      }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "Redis ops/sec",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 21 },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(redis_commands_processed_total[5m])",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "desc" }
      }
    }
  ]
}
